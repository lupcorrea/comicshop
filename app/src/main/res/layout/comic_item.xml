<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="350dp"
    android:weightSum="10"
    android:layout_margin="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:weightSum="10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_comic_poster"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            app:srcCompat="@color/colorAccent" />

        <TextView
            android:id="@+id/list_comic_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Comic Title"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- TODO: put buttons for information and add to checkout -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <ImageButton
            android:id="@+id/list_comic_get_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/list_comic_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="One million dollars!"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/list_comic_discount_common"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="One million dollars!"
            android:gravity="center"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/list_comic_discount_rare"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="One million dollars!"
            android:gravity="center"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/list_comic_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>